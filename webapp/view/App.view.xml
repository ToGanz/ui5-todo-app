<mvc:View
  controllerName="sap.ui.demo.walkthrough.controller.App"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true">
  <App>
    <pages>
        <Page title="ToDo App Page">
          <content>
              <Panel
                headerText="ToDo App Panel">
                <content>
                  <Button
                    text="Say Hello"
                    press=".onShowHello"/>
                  <Input
                    value="{/recipient/name}"
                    description="Hello {/recipient/name}"
                    valueLiveUpdate="true"
                    width="60%"/>
                </content>
              </Panel>
          </content>
        </Page>
    </pages>
  </App>
</mvc:View>
