<mvc:View
   controllerName="sap.ui.demo.walkthrough.controller.TodoList"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <List
      headerText="ToDos"
      class="sapUiResponsiveMargin"
      width="auto"
      items="{/todos}" 
      mode="Delete"
      delete="handleDelete"
      >
      <items>
         <ObjectListItem
            title="{title}"/>
      </items>
   </List>
</mvc:View>